@model Club
@{
    ViewData["Title"] = "TrainerAddView";
}

<div id="greywrap" class="shadow-lg p-3 mb-5 bg-white rounded">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 centered">
                <h2 class="centered"><b>Тренер клуба @Model.name</b></h2>
                <hr />
                @using (Html.BeginForm("TrainerAddView", "Club", FormMethod.Post))
                {
                <fieldset>

                    <input type="hidden" name="idClub" value="@Model.id" />
                    <p>
                        <label name="surname">Фамилия</label>
                        <input name="surname" />
                    </p>
                    <p>
                        <label name="name">Имя</label>
                        <input name="name" />
                    </p>
                    <p>
                        <label name="patronymic">Отчество</label>
                        <input name="patronymic" />
                    </p>
                    <p>
                        <label name="phone">Телефон</label>  -
                        <input name="phone" type="tel" placeholder="+7 (900) 123-45-67"
                               pattern="\+7\s?[\(]{0,1}9[0-9]{2}[\)]{0,1}\s?\d{3}[-]{0,1}\d{2}[-]{0,1}\d{2}" />
                    </p>
                    <p>
                        <label name="dateBirth">Дата рождения</label>  -
                        <input name="dateBirth" type="date" />
                    </p>
                    <p>
                        <label name="job">Место работы</label>
                        <input name="job" />
                    </p>
                    @*<p>
            @Html.LabelFor(m => m.selectTrainer.photo, "Фото тренера")  -
            <input name="selectTrainer.photo" type="file" />
        </p>*@
                    <p><input type="submit" value="Добавить" /></p>
                </fieldset>
                }


            </div>

            <div class="col-lg-4 centered">
                @*@if (Model.selectTrainer.photo == "")
        {
            <img class="img-responsive" src="~/images/photo.jpg">
        }
        else
        {*@
                <img class="img-responsive" src="~/images/photo.jpg">
                @*}*@

            </div>
        </div>

    </div>
    <br>
    <br>
</div>


