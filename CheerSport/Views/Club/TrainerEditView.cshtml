@using CheerSport.Models.ModelsForView;
@model ModelForTrainerView
@{
    ViewData["Title"] = "TrainerEditView";
}

<div id="greywrap" class="shadow-lg p-3 mb-5 bg-white rounded">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 centered">
                <h2 class="centered"><b>Тренер клуба @Model.allClub.FirstOrDefault(x => x.id == Model.selectTrainer.Clubid).name</b></h2>
                <hr />
                @using (Html.BeginForm("TrainerEditPost", "Club", FormMethod.Post))
                {
                    <fieldset>
                        @Html.HiddenFor(m => m.selectTrainer.id)

                        <p>
                            @Html.LabelFor(m => m.selectTrainer.surname, "Фамилия")  -
                            @Html.EditorFor(m => m.selectTrainer.surname)
                        </p>
                        <p>
                            @Html.LabelFor(m => m.selectTrainer.name, "Имя")  -
                            @Html.EditorFor(m => m.selectTrainer.name)
                        </p>
                        <p>
                            @Html.LabelFor(m => m.selectTrainer.patronymic, "Отчество")  -
                            @Html.EditorFor(m => m.selectTrainer.patronymic)
                        </p>
                        <p>
                            @Html.LabelFor(m => m.selectTrainer.phone, "Телефон")  -
                            <input name="selectTrainer.phone" type="tel" placeholder="+7 (900) 123-45-67"
                                   pattern="\+7\s?[\(]{0,1}9[0-9]{2}[\)]{0,1}\s?\d{3}[-]{0,1}\d{2}[-]{0,1}\d{2}" value="@Model.selectTrainer.phone" />
                        </p>
                        <p>
                            @Html.LabelFor(m => m.selectTrainer.dateBirth, "Дата рождения")  -
                            <input name="selectTrainer.dateBirth" type="date" value='@Model.selectTrainer.dateBirth.ToString("yyyy")-@Model.selectTrainer.dateBirth.ToString("MM")-@Model.selectTrainer.dateBirth.ToString("dd")' />
                        </p>
                        <p>
                            @Html.LabelFor(m => m.selectTrainer.job, "Место работы")  -
                            @Html.EditorFor(m => m.selectTrainer.job)
                        </p>
                        @*<p>
                    @Html.LabelFor(m => m.selectTrainer.photo, "Фото тренера")  -
                    <input name="selectTrainer.photo" type="file" />
                </p>*@
                        <p><input  type="submit" value="Сохранить" /></p>
                    </fieldset>
                }


            </div>

            <div class="col-lg-4 centered">
                @if (Model.selectTrainer.photo == "")
                {
                    <img class="img-responsive" src="~/images/photo.jpg">
                }
                else
                {
                    <img class="img-responsive" src="@Model.selectTrainer.photo">
                }

            </div>
        </div>

    </div>
    <br>
    <br>
</div>

